@model Dictionary<OrderHeader, string>

<table class="table table-bordered table-stripped" style="width:100%">
    <thead>
        <tr>
            <th>Дата заказа</th>
            <th>Время заказа</th>
            <th>Сумма заказа</th>
            <th>Статус заказа</th>
            <th>Статус оплаты</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td width=10%>@order.Key.OrderDate.ToShortDateString()</td>
                <td width=10%>@order.Key.OrderDate.ToShortTimeString()</td>                
                <td width=10%>@order.Value</td>
                <td width=15%>@order.Key.OrderStatus</td>
                <td width=15%>@order.Key.PaymentStatus</td>
            </tr>
        }
    </tbody>
</table>